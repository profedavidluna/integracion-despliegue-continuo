{
  "name": "coindash-api",
  "version": "1.0.0",
  "description": "CoinDash - API REST para micropagos con monedas digitales",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src/ tests/"
  },
  "keywords": [
    "ecommerce",
    "payments",
    "digital-coins",
    "api",
    "nodejs"
  ],
  "author": "CoinDash Team",
  "license": "MIT",
  "dependencies": {
    "cors": "2.8.5",
    "express": "5.2.1",
    "express-rate-limit": "7.1.5",
    "helmet": "7.1.0"
  },
  "devDependencies": {
    "eslint": "8.56.0",
    "jest": "29.7.0",
    "nodemon": "3.0.2",
    "supertest": "6.3.4"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "lines": 70
      }
    }
  }
}
